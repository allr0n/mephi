print("Расчет энергии фотона");
lv=float(input("Введите длинну волны в нм: "))
h=4.135668e-15
c=2.99792e8
st=1e-9
lvd=lv*st
Ef=c*h/lvd
print("Постаянная Планка =","{:3.2e}".format(h)," эВ•с")
print("Скорость света =","{:3.2e}".format(c), " м/с")
print("Длинна волны фотона =","{:3.2e}".format(lvd), " м")
print("Частота фотона =", "{:3.2e}".format(c/lvd), " Грц")
print("Энергия фотона =", "{:.2f}".format(Ef), " эВ")
